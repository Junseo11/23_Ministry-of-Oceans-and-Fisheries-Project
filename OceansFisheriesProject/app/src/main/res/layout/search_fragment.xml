<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.03"
        ></androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/endGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.97"
        ></androidx.constraintlayout.widget.Guideline>




    <TextView
        android:id="@+id/searchtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Search"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/startGuide"
        ></TextView>
    <TextView
        android:id="@+id/searchtxt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/searchtxt"
        app:layout_constraintStart_toStartOf="@id/startGuide"
        android:text="Search for the News You Want !"
        android:textStyle="bold"
        android:textSize="20sp"
        ></TextView>
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/searchbar"
        app:defaultQueryHint="search"

        app:layout_constraintTop_toBottomOf="@+id/searchtxt_2"
        app:layout_constraintStart_toStartOf="@id/startGuide"
        app:layout_constraintEnd_toStartOf="@id/endGuide"
        ></androidx.appcompat.widget.SearchView>
    <TextView
        android:id="@+id/Recenttxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent searches"
        app:layout_constraintTop_toBottomOf="@+id/searchbar"
        app:layout_constraintStart_toStartOf="@+id/startGuide"
        ></TextView>
    <TextView
        android:id="@+id/searchbox_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/searchbox"
        app:layout_constraintStart_toStartOf="@id/startGuide"
        app:layout_constraintTop_toBottomOf="@id/Recenttxt"
        app:layout_constraintEnd_toStartOf="@+id/searchbox_2"
        ></TextView>
    <TextView
        android:id="@+id/searchbox_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/searchbox"
        app:layout_constraintStart_toEndOf="@id/searchbox_1"
        app:layout_constraintTop_toBottomOf="@id/Recenttxt"
        app:layout_constraintEnd_toStartOf="@+id/searchbox_3"
        ></TextView>
    <TextView
        android:id="@+id/searchbox_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/searchbox"
        app:layout_constraintStart_toEndOf="@id/searchbox_2"
        app:layout_constraintTop_toBottomOf="@id/Recenttxt"
        app:layout_constraintEnd_toStartOf="@+id/searchbox_4"
        ></TextView>
    <TextView
        android:id="@+id/searchbox_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/searchbox"
        app:layout_constraintStart_toEndOf="@id/searchbox_3"
        app:layout_constraintTop_toBottomOf="@id/Recenttxt"
        app:layout_constraintEnd_toStartOf="@+id/endGuide"
        ></TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/searchbox_1"
        app:layout_constraintStart_toStartOf="@id/startGuide"
        app:layout_constraintEnd_toStartOf="@id/endGuide"
        app:layout_constraintBottom_toBottomOf="parent"
        ></androidx.recyclerview.widget.RecyclerView>



</androidx.constraintlayout.widget.ConstraintLayout>